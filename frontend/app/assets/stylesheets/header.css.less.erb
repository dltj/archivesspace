// header customisations

@import "twitter/bootstrap/variables";
@import "twitter/bootstrap/mixins";

@iconSpritePath: asset-path('twitter/bootstrap/glyphicons-halflings.png');
@iconWhiteSpritePath: asset-path('twitter/bootstrap/glyphicons-halflings-white.png');

@import "skins/<%= ARCHIVES_SPACE_SKIN %>";

// support input appended to navbar search field
.navbar .input-append, 
.navbar .input-prepend {
   margin-bottom: 0;
}

.navbar-search .input-append input {
   float: left;
}

.navbar .input-append .btn-group {
   display: inline-block;
   padding: 0;
}

.navbar .input-append .btn {
   margin-left: -1px !important;
   .border-radius(0px) !important;
}

.navbar .input-append .btn.last {
   .border-radius(0 3px 3px 0) !important;
}

.navbar .input-prepend .btn {
   margin-right: -1px;
}

// Login Form
.login .btn.btn-primary {
   width: 100%;
   margin-left: 0;
}

.login-message {
   display: none !important;
}

.error .login-message {
   display: block !important;
}

.login .alert-success {
   display: none;
}

// user logged in, repository container
.user-container,
.repository-container {
   margin-left: 10px;
}
.user-label > span,
.repository > span {
   margin-right: 5px;
}
.user-container .dropdown-menu {
   min-width: 80px;
}
.user-label,
.repository-label {
   padding: 4px 9px;
   display: inline-block;
   vertical-align: middle;
   margin: 0 !important;
   .box-shadow(~"inset 0 1px 2px rgba(0,0,0,.1), 0 1px 0 rgba(255,255,255,.15)");
   border-top: 1px solid @navbarSearchBorder;
   border-bottom: 1px solid @navbarSearchBorder;
   .border-radius(4px 0 0 4px);
   #font > .sans-serif(12px, normal, 1);
   .navbarVerticalAlign(28px); // Vertically center in navbar
   margin-bottom: 0;
   line-height: @baseLineHeight;
   background-color: @navbarLinkBackgroundActive;
}

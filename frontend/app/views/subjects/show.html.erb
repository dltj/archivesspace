<%= render :partial=>"shared/breadcrumb", :locals=>{:trail=>[link_to("Browse Subjects", :controller=>:subjects, :action=>:index), @subject.term]} %>
<div class="row-fluid">
   <div class="span3">
      <div class="well">List all subjects here for quick access.</div>
   </div>
   <div class="span9">
      <div class="btn-group" style="float: right">
        <%= link_to "Edit", {:controller=>:subjects, :action=>:edit, :id=>@subject.id}, :class=>"btn btn-small" %>
      </div>
      <h2><%= @subject.term %>  <span class="label label-info">Subject</span></h2>
      <br/>
      <div class="row-fluid label-and-value">
          <div class="span3">Term</div>
          <div class="span9"><%= @subject.term %></div>
      </div>
      <div class="row-fluid label-and-value">
          <div class="span3">Type</div>
          <div class="span9"><%= @subject.term_type %></div>
      </div>
   </div>
</div>
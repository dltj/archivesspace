<%= semantic_form_for @repository, :url=>{:action=>:create}, :html=>{:class=>'form-horizontal'} do |f| %>
   <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Create Repository</h3>
   </div>
   <div class="modal-body">
     <% if @errors %>
        <div class="alert alert-error">
           <% @errors.each do |error| %>
              <div class="error"><%= error[:message] %></div>
           <% end %>
        </div>
     <% end %>
      <fieldset>
       <div class="control-group">
          <label class="control-label" for="repo_id">Repository Id</label>
          <div class="controls">
            <%= f.text_field :repo_id, :size=>10 %>
          </div>
        </div>
        <div class="control-group">
           <label class="control-label" for="description">Description</label>
           <div class="controls">
             <%= f.text_area :description, :rows=>3 %>
           </div>
         </div>
      </fieldset>
   </div>
   <div class="modal-footer">
      <button class="btn" data-dismiss="modal">Cancel</button>
      <input class="btn btn-primary" type="submit" name="commit" value="Create Repository" />
   </div>
<% end %>
<script>
  $('form#new_repository').ajaxForm({
     beforeSubmit: function() {
        $(".btn-primary", 'form#new_repository').attr("disabled","disabled");
     },
     success: function(response, status, xhr) {
        if (response === "Success") {
          document.location.reload(true);
        } else {
          $('form#new_repository').html(response);
        }        
     }, 
     error: function(obj, errorText, errorDesc) {
        $(".btn-primary", 'form#new_repository').removeAttr("disabled");
     }
  });
</script>